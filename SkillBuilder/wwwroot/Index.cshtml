<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>OAuth Login Success</title>
</head>
<body>
    <script>
        // Parse the URL fragment for tokens (Appwrite returns access_token in URL hash)
        const hash = window.location.hash.substring(1);
        const params = new URLSearchParams(hash);

        const accessToken = params.get('access_token');
        const userId = params.get('userId'); // if you get userId in query or fragment

        if (accessToken) {
          // Call backend to create local session with token
          fetch('/auth/google-callback', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            credentials: 'include',
            body: JSON.stringify({ accessToken })
          })
          .then(() => {
            // Redirect to homepage without hash fragment
            window.location.href = '/';
          })
          .catch(() => {
            window.location.href = '/login'; // or wherever error page
          });
        } else {
          // If no token, just redirect cleanly
          window.location.href = '/';
        }
    </script>
</body>
</html>