@model SkillBuilder.Models.Course

<style>
    .course-material-view-header {
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        color: #222;
    }

    .course-material-view-lesson-item {
        margin-left: 2rem;
        padding: 1rem 0;
        border-top: 1px solid #000;
        border-bottom: 1px solid #000;
        font-size: 1rem;
        color: #333;
    }

        .course-material-view-lesson-item:not(:first-child) {
            border-top: none;
        }

    .course-material-view-download-link {
        color: #344AEA;
        font-weight: 600;
        font-size: 0.9rem;
    }
</style>

<div class="course-material-view-tab-section">
    @if (Model.Materials != null && Model.Materials.Any())
    {
        foreach (var material in Model.Materials)
        {
            <div class="course-material-view-lesson-item">
                <strong>@material.Title</strong> <br />
                <span style="font-size: 0.9rem; color: #555;">@material.Description</span><br />
                @if (!string.IsNullOrWhiteSpace(material.FilePath))
                {
                    <a href="@material.FilePath" download class="course-material-view-download-link">
                        📥 Download File (@(material.FileSize / 1024.0):F1 KB)
                    </a>
                }
            </div>
        }
    }
    else
    {
        <p>No materials available for this course yet.</p>
    }
</div>