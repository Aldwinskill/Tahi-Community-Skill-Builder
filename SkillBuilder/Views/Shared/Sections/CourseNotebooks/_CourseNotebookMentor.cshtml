@model SkillBuilder.Models.Course

<style>
    /* Mentor Notebook Styles */
    .mentor-heading {
        font-size: 2rem;
        margin-bottom: 2rem;
        color: #222;
    }

    .mentor-profile {
        display: flex;
        align-items: center;
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .mentor-avatar {
        width: 120px;
        height: 120px;
        object-fit: cover;
        border-radius: 50%;
        border: 4px solid #ccc;
    }

    .mentor-info {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .mentor-name {
        font-size: 1.5rem;
        font-weight: bold;
        color: #344AEA;
        text-decoration: none;
    }

        .mentor-name:hover {
            text-decoration: underline;
        }

    .mentor-sub {
        font-size: 1rem;
        color: #555;
    }

    .mentor-bio {
        font-size: 1rem;
        color: #333;
        line-height: 1.7;
    }
</style>

@{
    // Get the artisan from a hardcoded source or service later — here assume you extract values from Model
    var artisanId = Model.CreatedBy; // e.g., "A1111111"
    var artisanName = "Juan Dela Cruz"; // Ideally resolved via lookup using CreatedBy
    var artisanProfession = "Pottery Artisan";
    var artisanHometown = "Vigan, Ilocos Sur";
    var artisanAvatar = "/assets/Mentors/juan.png";
    var artisanBio = "Juan is a 3rd-generation artisan who has taught pottery for over 15 years. He specializes in both traditional and modern techniques, promoting Filipino culture globally.";
}

<h1 class="mentor-heading">Get to know your mentor</h1>

<div class="mentor-profile">
    <img src="@artisanAvatar" class="mentor-avatar" alt="Mentor Avatar" />
    <div class="mentor-info">
        <a href="/ArtisanProfile/A1111111">@artisanName</a>
        <p class="mentor-sub">@artisanProfession from @artisanHometown</p>
    </div>
</div>

<p class="mentor-bio">
    @artisanBio
</p>