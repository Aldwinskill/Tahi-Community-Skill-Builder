@model SkillBuilder.Models.Course

<style>
    .course-mentor-view-heading {
        font-size: 2rem;
        margin-bottom: 2rem;
        color: #222;
    }

    .course-mentor-view-profile {
        display: flex;
        align-items: center;
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .course-mentor-view-avatar {
        width: 120px;
        height: 120px;
        object-fit: cover;
        border-radius: 50%;
        border: 4px solid #ccc;
    }

    .course-mentor-view-info {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .course-mentor-view-name {
        font-size: 1.5rem;
        font-weight: bold;
        color: #344AEA;
        text-decoration: none;
    }

        .course-mentor-view-name:hover {
            text-decoration: underline;
        }

    .course-mentor-view-sub {
        font-size: 1rem;
        color: #555;
    }

    .course-mentor-view-bio {
        font-size: 1rem;
        color: #333;
        line-height: 1.7;
    }
</style>

@{
    var artisan = Model.Artisan;
    var fullName = $"{artisan.FirstName} {artisan.LastName}";
}

<h1 class="course-mentor-view-heading">Get to know your mentor</h1>

@if (artisan != null)
{
    <div class="course-mentor-view-profile">
        <img src="/assets/Avatar/Sample10.svg" class="course-mentor-view-avatar" />
        <div class="course-mentor-view-info">
            <a href="/ArtisanViewAsMentor/@artisan.ArtisanId" class="course-mentor-view-name">@fullName</a>
            <p class="course-mentor-view-sub">@artisan.Profession from @artisan.Hometown</p>
        </div>
    </div>

    <p class="course-mentor-view-bio">
        @artisan.Introduction
    </p>
}
else
{
    <p>Mentor information not available.</p>
}