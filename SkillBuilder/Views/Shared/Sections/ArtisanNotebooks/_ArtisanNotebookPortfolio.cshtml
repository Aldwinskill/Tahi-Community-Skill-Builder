@using SkillBuilder.Models.ViewModels
@model ArtisanProfileViewModel

<style>
    .artisan-portfolio-section {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        min-height: 580px;
        max-height: 580px;
        overflow-y: auto;
    }

    .artisan-portfolio-heading {
        font-size: 1.8rem;
        font-weight: bold;
        color: #222;
    }

    .artisan-portfolio-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .artisan-portfolio-item {
        width: 200px;
        height: 150px;
        border-radius: 8px;
        overflow: hidden;
        cursor: pointer;
        position: relative;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .artisan-portfolio-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(0,0,0,0.15);
        }

        .artisan-portfolio-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    /* Modal Styles */
    .artisan-portfolio-modal {
        display: none;
        position: fixed;
        z-index: 9999;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.7);
        justify-content: center;
        align-items: center;
    }

    .artisan-portfolio-modal-content {
        background: #fff;
        border-radius: 10px;
        max-width: 700px;
        width: 90%;
        padding: 1.5rem;
        position: relative;
        animation: fadeIn 0.3s ease-in-out;
    }

    .artisan-portfolio-close {
        position: absolute;
        top: 10px;
        right: 15px;
        font-size: 1.5rem;
        font-weight: bold;
        color: #333;
        cursor: pointer;
    }

    .artisan-portfolio-modal-body {
        text-align: center;
    }

    .artisan-portfolio-modal-image {
        max-width: 100%;
        max-height: 400px;
        margin-bottom: 1rem;
        border-radius: 10px;
    }

    .artisan-portfolio-modal-details {
        text-align: left;
    }

        .artisan-portfolio-modal-details h2 {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
            color: #344AEA;
        }

        .artisan-portfolio-modal-details p {
            margin: 0.2rem 0;
            font-size: 1rem;
            color: #444;
        }
</style>

<div class="artisan-portfolio-section">
    <div class="artisan-portfolio-heading">Portfolio</div>

    <div class="artisan-portfolio-grid">
        @if (Model.ArtisanWorks != null && Model.ArtisanWorks.Any())
        {
            foreach (var work in Model.ArtisanWorks)
            {
                <div class="artisan-portfolio-item"
                     data-title="@work.Title"
                     data-publish="@work.PublishDate.ToString("MMMM dd, yyyy")"
                     data-caption="@work.Caption">
                    <img src="@work.ImageUrl" alt="@work.Title" />
                </div>
            }
        }
        else
        {
            <p>No works uploaded yet.</p>
        }
    </div>
</div>

<!-- Modal -->
<div id="artisanPortfolioModal" class="artisan-portfolio-modal">
    <div class="artisan-portfolio-modal-content">
        <span class="artisan-portfolio-close">&times;</span>
        <div class="artisan-portfolio-modal-body">
            <img id="artisanPortfolioModalImage" class="artisan-portfolio-modal-image" src="" alt="Work Image" />
            <div class="artisan-portfolio-modal-details">
                <h2 id="artisanPortfolioModalTitle"></h2>
                <p id="artisanPortfolioModalDate"></p>
                <p id="artisanPortfolioModalCaption"></p>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const modal = document.getElementById("artisanPortfolioModal");
        const modalImage = document.getElementById("artisanPortfolioModalImage");
        const modalTitle = document.getElementById("artisanPortfolioModalTitle");
        const modalDate = document.getElementById("artisanPortfolioModalDate");
        const modalCaption = document.getElementById("artisanPortfolioModalCaption");
        const closeBtn = document.querySelector(".artisan-portfolio-close");

        document.querySelectorAll(".artisan-portfolio-item").forEach(item => {
            item.addEventListener("click", () => {
                const img = item.querySelector("img");
                modalImage.src = img.src;
                modalTitle.textContent = item.dataset.title;
                modalDate.textContent = `Published on: ${item.dataset.publish}`;
                modalCaption.textContent = item.dataset.caption;
                modal.style.display = "flex";
            });
        });

        closeBtn.addEventListener("click", () => modal.style.display = "none");
        modal.addEventListener("click", (e) => {
            if (e.target === modal) modal.style.display = "none";
        });
    });
</script>