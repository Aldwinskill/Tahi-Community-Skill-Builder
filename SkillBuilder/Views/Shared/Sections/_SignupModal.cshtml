    }

    .requirement-text {
        display: flex;
        align-items: center;
        gap: 0.4rem;
    }

    .checkbox-signup {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 0.9rem;
        color: #1a1a1a;
        margin: 1.5rem 0;
