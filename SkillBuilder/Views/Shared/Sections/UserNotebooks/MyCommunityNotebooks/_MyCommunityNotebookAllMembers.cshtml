@model SkillBuilder.Models.ViewModels.UserProfileViewModel

@foreach (var community in Model.MyCommunities)
{
    <h3 style="margin-bottom: 1rem;">@community.Name Members</h3>
    <div id="communityMembersWrapper_@community.Id">
        @{
            var members = Model.CommunityMembers.ContainsKey(community.Id)
            ? Model.CommunityMembers[community.Id].Where(m => m.Role != "Owner").ToList()
            : new List<SkillBuilder.Models.ViewModels.CommunityMemberViewModel>();
        }

        @if (!members.Any())
        {
            <div class="no-members">No members found in this community.</div>
        }
        else
        {
            <div class="community-members-container">
                @foreach (var member in members)
                {
                    <div class="community-member-card">
                        <div class="member-info">
                            <img src="@member.AvatarUrl" alt="@member.FullName" class="member-avatar" />
                            <div class="member-details">
                                <span class="member-name">@member.FullName</span>
                                <span class="member-role">@member.Role</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
}

<style>
    .community-members-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        font-family: 'Inter', sans-serif;
    }

    .community-member-card {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.9rem 1.2rem;
        border-radius: 10px;
        border: 1px solid #e5e7eb;
        background: #f9fafb;
        transition: 0.2s;
    }

        .community-member-card:hover {
            background: #eef2ff;
            transform: translateY(-1px);
        }

    .member-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .member-avatar {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        border: 2px solid #e5e7eb;
        object-fit: cover;
    }

    .member-details .member-name {
        font-weight: 600;
        color: #111827;
    }

    .member-details .member-role {
        font-size: 0.85rem;
        color: #6b7280;
    }

    .no-members {
        text-align: center;
        font-weight: 500;
        color: #6b7280;
        padding: 2rem;
    }
</style>