@model List<SkillBuilder.Models.CourseProjectSubmission>

<style>

    .section-header {
        font-size: 1.8rem;
        color: #344AEA;
        margin-bottom: 2rem;
    }

    .project-gallery-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
    }

    .project-card {
        width: 200px;
        text-align: center;
    }

        .project-card img {
            width: 100%;
            height: 160px;
            object-fit: cover;
            border-radius: 10px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.15);
        }

    .project-course-name {
        margin-top: 0.5rem;
        font-weight: bold;
        color: #333;
        font-size: 0.95rem;
    }
</style>

<section class="project-gallery-section">
    <h2 class="section-header">Projects</h2>

    @if (Model != null && Model.Any())
    {
        <div class="project-gallery-grid">
            @foreach (var project in Model)
            {
                <div class="project-card">
                    <img src="@project.ImageUrl" alt="Project from @project.Course?.Title" />
                    <div class="project-course-name">@project.Course?.Title</div>
                </div>
            }
        </div>
    }
    else
    {
        <p>You haven't submitted any project yet. Once you complete a course by uploading your work, it will show up here.</p>
    }
</section>