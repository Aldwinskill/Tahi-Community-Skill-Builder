@using SkillBuilder.Models.ViewModels
@model UserProfileViewModel

<style>
    .user-achievements-section {
        margin-bottom: 4rem;
    }

    .user-achievements-header {
        font-size: 1.8rem;
        color: #344AEA;
        margin-bottom: 1.5rem;
    }

    .user-achievements-tabs {
        display: flex;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .user-achievements-tab {
        padding: 0.5rem 1rem;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f0f0f0;
        cursor: pointer;
        transition: all 0.2s ease;
    }

        .user-achievements-tab.active {
            background-color: #344AEA;
            color: white;
            border-color: #344AEA;
        }

    .user-achievements-content {
        padding: 1rem;
        border-radius: 10px;
        background-color: #f9f9f9;
    }
</style>

<section class="user-achievements-section">
    <h2 class="user-achievements-header">Achievements</h2>

    <div class="user-achievements-tabs">
        <div class="user-achievements-tab active" onclick="showAchievementTab('inProgress')">Pending</div>
        <div class="user-achievements-tab" onclick="showAchievementTab('completed')">Achieved</div>
    </div>

    <div class="user-achievements-content" id="inProgressAchievements">
        @await Html.PartialAsync("Sections/UserNotebooks/AchievementsNotebooks/_AchievementsNotebookPending", Model.Achievements)
    </div>

    <div class="user-achievements-content" id="completedAchievements" style="display: none;">
        @await Html.PartialAsync("Sections/UserNotebooks/AchievementsNotebooks/_AchievementsNotebookAchieved", Model.Achievements)
    </div>
</section>

<script>
    function showAchievementTab(tab) {
        document.getElementById("inProgressAchievements").style.display = tab === 'inProgress' ? 'block' : 'none';
        document.getElementById("completedAchievements").style.display = tab === 'completed' ? 'block' : 'none';

        const tabs = document.querySelectorAll('.user-achievements-tab');
        tabs.forEach(t => t.classList.remove('active'));
        if (tab === 'inProgress') {
            tabs[0].classList.add('active');
        } else {
            tabs[1].classList.add('active');
        }
    }
</script>