@using SkillBuilder.Models.ViewModels
@model List<SkillBuilder.Models.Course>

<style>
    .user-completed-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .user-completed-card-link {
        text-decoration: none;
        color: inherit;
    }

    .user-completed-card {
        background-color: #f0f9ff;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .user-completed-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        }

    .user-completed-image {
        width: 100%;
        height: 180px;
        background-size: cover;
        background-position: center;
    }

    .user-completed-content {
        padding: 1.25rem;
    }

    .user-completed-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: #1D4ED8;
        margin-bottom: 0.5rem;
    }

    .user-completed-description {
        font-size: 0.95rem;
        color: #444;
        margin-bottom: 1rem;
    }

    .user-completed-details {
        font-size: 0.9rem;
        font-weight: 500;
        color: #2563EB;
    }
</style>

@if (Model == null || !Model.Any())
{
    <p>No completed courses yet.</p>
}
else
{
    <div class="user-completed-grid">
        @foreach (var course in Model)
        {
            <a href="/Courses/Details/@course.Id" class="user-completed-card-link">
                <div class="user-completed-card">
                    <div class="user-completed-image" style="background-image: url('@course.ImageUrl');"></div>
                    <div class="user-completed-content">
                        <div class="user-completed-title">@course.Title</div>
                        <div class="user-completed-description">@course.Overview</div>
                        <div class="user-completed-details">
                            Status: Completed
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>
}