@using SkillBuilder.Models.ViewModels
@model AdminProfileViewModel

<style>
    /* =======================
           Layout / Sections
        ======================== */
    .artisan-application-section {
        padding: 2rem;
    }

    .artisan-application-header {
        font-size: 1.8rem;
        font-weight: bold;
        margin-bottom: 1.5rem;
        color: #344AEA;
    }

    .artisan-application-controls {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    /* =======================
           Search & Filter
        ======================== */
    .artisan-search-bar {
        display: flex;
        flex: 0 0 90%;
        border: 1px solid #ccc;
        border-radius: 8px;
        overflow: hidden;
    }

        .artisan-search-bar input {
            flex: 1;
            padding: 0.6rem 1rem;
            border: none;
            outline: none;
            font-size: 1rem;
        }

        .artisan-search-bar button {
            background-color: #344AEA;
            border: none;
            padding: 0.6rem 1rem;
            cursor: pointer;
        }

            .artisan-search-bar button img {
                width: 1.2rem;
                height: 1.2rem;
            }

    .artisan-filter-btn {
        flex: 0 0 10%;
        background-color: #eee;
        border: none;
        padding: 0.6rem 1rem;
        border-radius: 8px;
        cursor: pointer;
        font-weight: bold;
    }

    /* =======================
       Table
    ======================== */
    .artisan-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 1.2rem;
    }

        .artisan-table th {
            text-align: left;
            font-size: 1rem;
            color: #666;
            padding: 0.5rem 1rem;
        }

    /* Row styling */
    .artisan-row {
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        /* Alternate rows slightly different */
        .artisan-row:nth-child(even) {
            background-color: #f1f1f1;
        }

        /* Hover effect for rows */
        .artisan-row:hover {
            background-color: #e6e6e6;
            transform: scale(1.01); /* subtle pop */
        }

    .artisan-cell {
        padding: 1rem;
        vertical-align: middle;
    }

    .artisan-info {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

        .artisan-info img {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 50%;
        }

    .artisan-details {
        display: flex;
        flex-direction: column;
    }

    .artisan-name {
        font-weight: bold;
        font-size: 1rem;
        color: #333;
    }

    .artisan-email {
        font-size: 0.85rem;
        color: #777;
    }

    .artisan-status {
        font-weight: 600;
        font-size: 1rem;
        color: #222;
        text-align: center;
    }

    /* =======================
           Action Buttons
        ======================== */
    .action-buttons {
        display: flex;
        gap: 0.5rem;
        justify-content: flex-end;
    }

    .admin-action-btn {
        padding: 0.4rem 0.8rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 0.9rem;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

    .reactivate-btn {
        background-color: #4CAF50;
        color: white;
    }

        .reactivate-btn:hover {
            background-color: #45a049;
        }

    .delete-btn {
        background-color: #FF4C4C;
        color: white;
    }

        .delete-btn:hover {
            background-color: #c0392b;
        }

    /* =======================
           Modal & Backdrop
        ======================== */
    .admin-modal-backdrop {
        display: none;
        position: fixed;
        inset: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.6);
        z-index: 1001;
    }

    .admin-modal {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: #fff;
        padding: 1.5rem;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        z-index: 1002;
        max-width: 400px;
        width: 90%;
        text-align: center;
        animation: fadeIn 0.3s ease;
    }

        .admin-modal h3 {
            margin-bottom: 1rem;
            font-size: 1.3rem;
            font-weight: bold;
            color: #333;
        }

        .admin-modal p {
            margin-bottom: 1.5rem;
            font-size: 1rem;
            color: #555;
        }

    .admin-modal-buttons {
        display: flex;
        justify-content: center;
        gap: 1rem;
    }

        .admin-modal-buttons button {
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

    .admin-modal-confirm {
        background-color: #4CAF50;
        color: white;
    }

    .admin-modal-cancel {
        background-color: #ccc;
        color: #333;
    }

    .admin-modal-confirm:hover {
        opacity: 0.9;
    }

    .admin-modal-cancel:hover {
        background-color: #b3b3b3;
    }

</style>

<div class="artisan-application-section">
    <div class="artisan-application-header">All Artisan Applications</div>

    <div class="artisan-application-controls">
        <div class="artisan-search-bar">
            <input type="text" placeholder="Search by name or email..." />
            <button type="button">
                <img src="/assets/Icons/Search.ico" alt="Search" />
            </button>
        </div>
        <button class="artisan-filter-btn">Filter</button>
    </div>

    <table class="artisan-table">
        <thead>
            <tr>
                <th>Name</th>
                <th style="text-align: center;">Status</th>
                <th style="text-align: right;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.AllPendingApplications != null && Model.AllPendingApplications.Any())
            {
                foreach (var application in Model.AllPendingApplications)
                {
                    var user = application.User;

                    <tr class="artisan-row">
                        <td class="artisan-cell">
                            <div class="artisan-info">
                                <img src="@user.UserAvatar" alt="Avatar" />
                                <div class="artisan-details">
                                    <div class="artisan-name">
                                        <a asp-controller="AdminProfile"
                                           asp-action="ArtisanApplicationViewByAdmin"
                                           asp-route-id="@application.Id"
                                           style="text-decoration: none; color: #344AEA;">
                                            @user.FirstName @user.LastName
                                        </a>
                                    </div>
                                    <div class="artisan-email">@user.Email</div>
                                </div>
                            </div>
                        </td>
                        <td class="artisan-cell artisan-status">
                            @application.Status
                        </td>
                        <td class="user-cell">
                            <div class="action-buttons">
                                <!-- Approve button -->
                                <!-- Approve button -->
                                <form asp-action="ApproveApplication"
                                      asp-route-id="@application.Id"
                                      asp-route-adminId="@Model.Admin.UserId"
                                      method="post"
                                      onsubmit="return artisanOpenModal(this, 'Approve');">
                                    <button type="submit" class="admin-action-btn reactivate-btn">
                                        Approve
                                    </button>
                                </form>

                                <!-- Reject button -->
                                <form asp-action="RejectApplication"
                                      asp-route-id="@application.Id"
                                      asp-route-adminId="@Model.Admin.UserId"
                                      method="post"
                                      onsubmit="return artisanOpenModal(this, 'Reject');">
                                    <button type="submit" class="admin-action-btn delete-btn">
                                        Reject
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="artisan-cell" style="text-align: center; padding: 2rem; color: #888;">
                        No pending artisan applications at the moment.
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Backdrop -->
    <div id="artisanModalBackdrop" class="admin-modal-backdrop"></div>

    <!-- Modal -->
    <div class="admin-modal" id="artisanActionModal">
        <h3>Confirm Action</h3>
        <p id="artisanModalMessage"></p>
        <div class="admin-modal-buttons">
            <button class="admin-modal-cancel" onclick="artisanCloseModal()">Cancel</button>
            <button class="admin-modal-confirm" id="artisanConfirmAction">Yes</button>
        </div>
    </div>

</div>

<script>
        let artisanCurrentForm = null;

    function artisanOpenModal(form, action) {
        artisanCurrentForm = form;

        // Set message
        document.getElementById("artisanModalMessage").innerText =
            `Are you sure you want to ${action.toLowerCase()} this artisan application?`;

        const confirmBtn = document.getElementById("artisanConfirmAction");

        // Reset class & style
        confirmBtn.className = "admin-modal-confirm";

        // Action-specific color
        if (action === "Approve") {
            confirmBtn.style.backgroundColor = "#4CAF50";
            confirmBtn.innerText = "Approve";
        } else {
            confirmBtn.style.backgroundColor = "#e74c3c";
            confirmBtn.innerText = "Reject";
        }

        // Show backdrop + modal
        document.getElementById("artisanModalBackdrop").style.display = "block";
        document.getElementById("artisanActionModal").style.display = "block";

        return false; // prevent default submit
    }

    function artisanConfirmActionHandler() {
        if (artisanCurrentForm) artisanCurrentForm.submit();
    }

    function artisanCloseModal() {
        document.getElementById("artisanModalBackdrop").style.display = "none";
        document.getElementById("artisanActionModal").style.display = "none";
        artisanCurrentForm = null;
    }

    // Bind buttons
    document.getElementById("artisanConfirmAction").addEventListener("click", artisanConfirmActionHandler);
    document.getElementById("artisanModalBackdrop").addEventListener("click", artisanCloseModal);

    // ESC key
    document.addEventListener("keydown", e => {
        if (e.key === "Escape") artisanCloseModal();
    });
</script>