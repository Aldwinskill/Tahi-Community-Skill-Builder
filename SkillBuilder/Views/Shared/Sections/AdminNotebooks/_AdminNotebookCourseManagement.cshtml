@using SkillBuilder.Models.ViewModels
@model AdminProfileViewModel

<style>
    .admin-course-section {
        padding: 2rem;
    }

    .admin-course-header {
        font-size: 1.8rem;
        font-weight: bold;
        margin-bottom: 1.5rem;
        color: #344AEA;
    }

    .admin-course-controls {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .course-search-bar {
        display: flex;
        flex: 0 0 90%;
        border: 1px solid #ccc;
        border-radius: 8px;
        overflow: hidden;
    }

        .course-search-bar input {
            flex: 1;
            padding: 0.6rem 1rem;
            border: none;
            outline: none;
            font-size: 1rem;
        }

        .course-search-bar button {
            background-color: #344AEA;
            border: none;
            padding: 0.6rem 1rem;
            cursor: pointer;
        }

            .course-search-bar button img {
                width: 1.2rem;
                height: 1.2rem;
            }

    .course-filter-btn {
        flex: 0 0 10%;
        background-color: #eee;
        border: none;
        padding: 0.6rem 1rem;
        border-radius: 8px;
        cursor: pointer;
        font-weight: bold;
    }

    .course-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 1.2rem;
    }

        .course-table th {
            text-align: left;
            font-size: 1rem;
            color: #666;
            padding: 0.5rem 1rem;
        }

    .course-row {
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    }

    .course-cell {
        padding: 1rem;
        vertical-align: middle;
    }

    .course-name {
        font-weight: bold;
        font-size: 1rem;
        color: #333;
    }

    .course-author {
        font-size: 0.95rem;
        color: #222;
        text-align: center;
        font-weight: 500;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
        justify-content: flex-end;
    }

    .review-btn {
        background-color: #3498DB;
        color: white;
    }

    .publish-btn {
        background-color: #2ECC71;
        color: white;
    }

    .unpublish-btn {
        background-color: #E67E22;
        color: white;
    }

    .action-buttons button {
        padding: 0.4rem 0.8rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 0.9rem;
        font-weight: bold;
    }
</style>

<div class="admin-course-section">
    <div class="admin-course-header">All Course Submissions</div>

    <div class="admin-course-controls">
        <div class="course-search-bar">
            <input type="text" placeholder="Search by course name or creator..." />
            <button type="button">
                <img src="/assets/Icons/Search.ico" alt="Search" />
            </button>
        </div>
        <button class="course-filter-btn">Filter</button>
    </div>

    <table class="course-table">
        <thead>
            <tr>
                <th>Course Name</th>
                <th style="text-align: center;">Created By</th>
                <th style="text-align: right;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.AllSubmittedCourses != null && Model.AllSubmittedCourses.Any())
            {
                foreach (var course in Model.AllSubmittedCourses)
                {
                    <tr class="course-row">
                        <!-- Course Title -->
                        <td class="course-cell course-name">
                            @course.Title
                        </td>

                        <!-- Creator (Artisan) -->
                        <td class="course-cell course-author">
                            @course.Artisan?.User?.FirstName @course.Artisan?.User?.LastName
                        </td>

                        <!-- Actions -->
                        <td class="course-cell">
                            <div class="action-buttons">
                                <button class="review-btn">Review</button>
                                @if (course.IsPublished)
                                {
                                    <button class="unpublish-btn">Unpublish</button>
                                }
                                else
                                {
                                    <button class="publish-btn">Publish</button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="course-cell" style="text-align: center; padding: 2rem; color: #888;">
                        No submitted courses available.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>