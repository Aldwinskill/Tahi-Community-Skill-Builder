@model List<SkillBuilder.Models.Artisan>

@{
    ViewData["Title"] = "List of Artisans";
    ViewData["UseCourseNavbar"] = true;
}

<style>
    .artisan-list-container {
        padding: 4rem 20rem;
    }

    .artisan-list-header {
        font-size: 2rem;
        font-weight: bold;
        color: #344AEA;
        margin-top: 4rem;
        margin-bottom: 2rem;
    }

    .artisan-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 0.8rem;
    }

        .artisan-table td,
        .artisan-table th {
            vertical-align: middle;
        }

    .artisan-row {
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    }

    .artisan-cell {
        padding: 1rem;
        vertical-align: middle;
    }

    .artisan-info {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

        .artisan-info img {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 50%;
        }

    .artisan-details {
        display: flex;
        flex-direction: column;
        justify-content: center; 
    }

    .artisan-name a {
        font-weight: bold;
        font-size: 1rem;
        color: #333;
        text-decoration: none;
    }

        .artisan-name a:hover {
            text-decoration: underline;
        }

    .artisan-profession {
        font-size: 0.85rem;
        color: #666;
    }

    /* Search bar wrapper */
    .artisan-search-bar-wrapper {
        display: flex;
        width: 100%;
        border: 1px solid #ccc;
        border-radius: 8px;
        overflow: hidden;
        margin-bottom: 2rem;
    }

        /* Input field */
        .artisan-search-bar-wrapper input {
            flex: 1;
            padding: 0.6rem 1rem;
            border: none;
            outline: none;
            font-size: 1rem;
        }

        /* Optional search button */
        .artisan-search-bar-wrapper button {
            flex: 0 0 auto;
            background-color: #344AEA;
            border: none;
            padding: 0 1rem;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .artisan-search-bar-wrapper button img {
                width: 1.2rem;
                height: 1.2rem;
            }
</style>

<div class="artisan-list-container">
    <div class="artisan-list-header">All Artisans</div>

    <!-- Search bar + Filter dropdown -->
    <div class="artisan-search-bar-wrapper" style="margin-bottom: 2rem; gap: 1rem;">
        <input type="text" id="artisanSearchInput" placeholder="Search by name..." />

        <!-- Filter dropdown -->
        <select id="artisanProfessionFilter" style="
        padding: 0.6rem 1rem;
        border-radius: 8px;
        border: 1px solid #ccc;
        font-size: 1rem;
        background-color: white;
        cursor: pointer;
    ">
            <option value="">All Professions</option>
            <option value="Potter">Potter</option>
            <option value="Weaver">Weaver</option>
            <option value="Woodcarver">Woodcarver</option>
            <option value="Shoemaker">Shoemaker</option>
            <option value="Paper Crafter">Paper Crafter</option>
            <option value="Embroiderer">Embroiderer</option>
        </select>

        <button type="button">
            <img src="/assets/Icons/Search.ico" alt="Search" />
        </button>
    </div>

    <table class="artisan-table">
        <tbody>
            @foreach (var artisan in Model)
            {
                <tr class="artisan-row">
                    <td class="artisan-cell">
                        <div class="artisan-info">
                            <img src="@artisan.User.UserAvatar"/>
                            <div class="artisan-details">
                                <div class="artisan-name">
                                    <a href="/ArtisanViewAsMentor/@artisan.UserId">
                                        @artisan.User.FirstName @artisan.User.LastName
                                    </a>
                                </div>
                            </div>
                        </div>
                    </td>
                    <td class="artisan-cell">@artisan.Profession</td>
                    <td class="artisan-cell">@artisan.Hometown</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    window.addEventListener('DOMContentLoaded', () => {
        const searchInput = document.getElementById('artisanSearchInput');
        const professionFilter = document.getElementById('artisanProfessionFilter');
        const artisanRows = document.querySelectorAll('.artisan-row');

        function filterArtisans() {
            const nameQuery = searchInput.value.toLowerCase().trim();
            const professionQuery = professionFilter.value; // exact match or empty for all

            artisanRows.forEach(row => {
                const name = row.querySelector('.artisan-name a').innerText.toLowerCase();
                const profession = row.cells[1].innerText;

                const matchesName = name.includes(nameQuery);
                const matchesProfession = !professionQuery || profession === professionQuery;

                row.style.display = (matchesName && matchesProfession) ? 'table-row' : 'none';
            });
        }

        // Trigger filter when typing or changing profession
        searchInput.addEventListener('input', filterArtisans);
        professionFilter.addEventListener('change', filterArtisans);

        // Optional: Remove ?search= from URL on page load
        const url = new URL(window.location.href);
        if (url.searchParams.has('search')) {
            url.searchParams.delete('search');
            window.history.replaceState({}, document.title, url.pathname);
        }
    });
</script>