            margin-bottom: 1.5rem;
            color: #344AEA;
        }

    .module-chapter {
        margin-bottom: 2rem;
    }

        .module-chapter h3 {
            font-size: 1.1rem;
            font-weight: bold;
            color: #444;
            margin-bottom: 0.8rem;
        }

    .module-tab {
        padding: 0.75rem 1rem;
        margin-bottom: 0.5rem;
        background-color: #E0F2FF;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 500;
        color: #333;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

