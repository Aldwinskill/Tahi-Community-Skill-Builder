    .tahi-cc-btn {
        margin-top: 1rem;
        background-color: #344AEA;
        color: #fff;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        padding: 0.5rem 1rem;
        cursor: pointer;
        transition: background 0.2s ease;
    }

