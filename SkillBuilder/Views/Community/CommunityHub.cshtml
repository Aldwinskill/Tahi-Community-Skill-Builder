@{
    ViewData["Title"] = "Community Hub";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .community-wrapper {
        margin: 5.5rem 10%;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .community-header h1 {
        font-size: 2rem;
        margin-bottom: 0.25rem;
        font-weight: bold;
    }

    .community-header h5 {
        color: #555;
        font-size: 1rem;
    }

    .community-top-row {
        display: flex;
        justify-content: space-between;
        margin-top: 1rem;
    }

    .community-search {
        width: 85%;
        display: flex;
        gap: 0.5rem;
    }

        .community-search input {
            flex: 1;
            padding: 0.5rem 1rem;
            border: 1px solid #ccc;
            border-radius: 6px;
        }

        .community-search button {
            background-color: #3182ce;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            font-weight: 600;
            cursor: pointer;
        }

    .create-post-btn {
        width: 15%;
        background-color: white;
        color: black;
        font-weight: 600;
        border: solid 1px;
        border-radius: 6px;
        cursor: pointer;
        padding: 0.5rem;
    }

    .community-body {
        display: flex;
        gap: 2rem;
        margin-top: 1rem;
    }

    .left-section {
        width: 80%;
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .community-card {
        background: #fff;
        padding: 1rem;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    .community-card-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .community-card-header-left {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background-color: #ccc;
    }

    .community-info h5 {
        margin: 0;
        font-size: 1.1rem;
        font-weight: bold;
    }

    .community-info h6 {
        margin: 0;
        font-size: 0.9rem;
        color: #777;
    }

    .join-btn {
        background-color: #38a169;
        color: white;
        border: none;
        border-radius: 6px;
        padding: 0.5rem 1rem;
        font-weight: 600;
        cursor: pointer;
    }

    .community-card-content {
        margin-top: 1rem;
        color: #444;
    }

    .community-card img {
        margin-top: 0.5rem;
        max-width: 100%;
        border-radius: 6px;
    }

    .community-meta {
        display: flex;
        gap: 1rem;
        font-size: 0.9rem;
        color: #666;
        margin-top: 0.75rem;
        border-top: 1px solid #eee;
        padding-top: 0.5rem;
    }

    .right-section {
        width: 20%;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .right-card {
        background: #fff;
        padding: 1rem;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    .popular-community {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-top: 1rem;
    }

        .popular-community .avatar {
            width: 40px;
            height: 40px;
        }

    .popular-info h5 {
        margin: 0;
        font-size: 1rem;
    }

    .popular-info h6 {
        margin: 0;
        font-size: 0.85rem;
        color: #888;
    }

    .see-more-btn {
        margin-top: 1rem;
        width: 100%;
        padding: 0.5rem;
        border-radius: 6px;
        background-color: #edf2f7;
        color: #333;
        font-weight: 600;
        cursor: pointer;
        border: none;
    }

    .create-community-card {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        background: #f9fafb;
        padding: 1rem;
        border-radius: 10px;
        cursor: pointer;
        font-weight: 600;
    }

        .create-community-card .plus-icon {
            font-size: 1.5rem;
            color: #3182ce;
        }
</style>

<div class="community-wrapper">
    <div class="community-header">
        <h1>Community Hub</h1>
        <h5>Connect with fellow artisans, students, and enthusiasts to share experiences, showcase your work, and learn together.</h5>
    </div>

    <div class="community-top-row">
        <div class="community-search">
            <input type="text" placeholder="Search communities..." />
            <button>Search</button>
        </div>
        <button class="create-post-btn">Create Post</button>
    </div>

    <div class="community-body">
        <!-- Left section -->
        <div class="left-section">
            <div class="community-card">
                <div class="community-card-header">
                    <div class="community-card-header-left">
                        <div class="avatar"></div>
                        <div class="community-info">
                            <h5>Filipino Potters Guild</h5>
                            <h6>by Maria Dela Cruz</h6>
                        </div>
                    </div>
                    <button class="join-btn">Join</button>
                </div>
                <div class="community-card-content">
                    Welcome to the official space for local potters! Share tips, progress shots, and anything ceramic.
                    <img src="/assets/community/sample-pottery.jpg" alt="Community Post Image" />
                    <div class="community-meta">
                        <span>👍 24</span>
                        <span>💬 6</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right section -->
        <div class="right-section">
            <div class="right-card">
                <h4>Popular Communities</h4>
                <div class="popular-community">
                    <div class="avatar"></div>
                    <div class="popular-info">
                        <h5>Weave Masters</h5>
                        <h6>1.2k members</h6>
                    </div>
                </div>
                <div class="popular-community">
                    <div class="avatar"></div>
                    <div class="popular-info">
                        <h5>Carvers' Den</h5>
                        <h6>980 members</h6>
                    </div>
                </div>
                <div class="popular-community">
                    <div class="avatar"></div>
                    <div class="popular-info">
                        <h5>Embroidery Circle</h5>
                        <h6>780 members</h6>
                    </div>
                </div>
                <div class="popular-community">
                    <div class="avatar"></div>
                    <div class="popular-info">
                        <h5>Dance Traditions</h5>
                        <h6>620 members</h6>
                    </div>
                </div>
                <button class="see-more-btn">See more communities</button>
            </div>

            <div class="create-community-card">
                <span class="plus-icon">➕</span>
                Create Community
            </div>

            <div class="right-card">
                <h4>Your Communities</h4>
                <div class="popular-community">
                    <div class="avatar"></div>
                    <div class="popular-info">
                        <h5>Paper Crafters</h5>
                        <h6>Joined</h6>
                    </div>
                </div>
                <div class="popular-community">
                    <div class="avatar"></div>
                    <div class="popular-info">
                        <h5>Musika ng Bayan</h5>
                        <h6>Joined</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>